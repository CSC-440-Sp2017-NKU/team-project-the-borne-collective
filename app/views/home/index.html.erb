<h1>NKUnet</h1>


<table>
    <tbody>
    <tr> 
    
    <th width=5%>Vote</th>
    <th></th>
    <th width="27%">Subject</th>
    <th width="68%">Title</th>
      
    </tr>
    <% @posts.each do |post| %>
      <tr>
        <td>10000</td>
        <td><%= link_to '<span style="color:green">&#8593;</span>'.html_safe  %><br/><%= link_to '<span style="color:red">&#8595;</span>'.html_safe %></td>
        <span class="listing"> 
          <td><strong><h4><%= link_to  @forums.find(post.forum_id).subject, post %></h4></strong></td>
          <td><h5><%= link_to post.title, post %></h5></td>
        </span>
      </tr>
    <% end %>
  </tbody>
</table>


<strong><h2>Course forums:</h2></strong>
<table>
    <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <span class="listing"> 
          <td><strong><h4><%= link_to  forum.subject, forum %></h4></strong></td>
        </span>
      </tr>
    <% end %>
  </tbody>
</table>
